  background #fcc

.fielderror
  color #500
  font-style italic
  margin-left 10px

dl
  margin 0.2em 0
dt
  float left
  //margin-top 5px
  opacity 0.6
  width 160px

.note
  font-size 80%
  opacity 0.6

table.list tr
  background #eee
table.list tr:first-child
  background #ddd
table.list td
  padding 0 20px

td.highlight
  background #efe

//.footer
//  opacity 0.3

.logo
  width 64px
  height 64px
  margin-right 1em

h1, h2
  font-family 'Ubuntu', sans-serif
  font-style italic
  font-weight bold
  margin 0

.featured
  text-align justify

.featured:after
  content ""
  display inline-block
  width 100%

.featured a
  display inline-block
  background-color #bda
  background-repeat no-repeat
  background-position center center
  background-size cover
  border-radius 0.5em
  box-shadow -1px -2px 1px #fff, 1px 2px 1px #361
  //margin 1em
  width 300px
  height 180px
  position relative

.featured a .label
  bottom 0.4em
  color white
  text-shadow none
  font-size 3em
  position absolute
  right 0.1em
  transform rotate(-20deg)
  -moz-transform rotate(-20deg)
  -webkit-transform rotate(-20deg)
  transform rotate(-20deg)

.featured a:hover .label
  text-shadow 0 0 0.2em #fff

.button
  display inline-block
  background #bda
  background linear-gradient(-90deg, #bda, #ceb)
  background -webkit-linear-gradient(-90deg, #bda, #ceb)
  border-radius 0.5em
  box-shadow -1px -2px 1px #fff, 1px 2px 1px #361
  margin 1em
  padding 0.8em 1.5em

a.disabled .button
  background #ccc
  box-shadow -1px -2px 1px #fff, 1px 2px 1px #333

.button.special
  background linear-gradient(-90deg, #be9, #cfa)
  background -webkit-linear-gradient(-90deg, #be9, #cfa)

.button img
  margin-right 15px
  vertical-align -40%

.footer img.logo
  float left

.clearboth
  clear both

img.inline
  width 20px
  height 20px
  margin-right 5px
  vertical-align -20%
