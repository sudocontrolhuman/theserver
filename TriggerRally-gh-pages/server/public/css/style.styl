  margin-top 10px

.editprofile
  float right

h1 img
  vertical-align -25%
  margin-right 10px

.realname
  opacity 0.6

.section
  background-color #dec
  background url("/images/section.jpg") no-repeat center center
  background-size cover
  //background #cdf
